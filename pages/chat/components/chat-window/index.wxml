<view class="container">
    <view class="message-list">
        <view wx:for="{{messageList}}" wx:key="index">
            <i-message message="{{item}}"></i-message>
        </view>
    </view>
    <view class="action-bar">
        <i-icon bind:tap="handleSendImage" name="picture"></i-icon>
        <textarea bind:tap="handleInput"></textarea>
        <i-button bind:tap="handleSend" shape="circle" size="mini">发送</i-button>
    </view>
    <i-safe-area></i-safe-area>
</view>