.container {
    width: 100%;
    display: flex;
    box-sizing: border-box;
    padding: 30rpx;
    border-radius: 10rpx;
    background: #ffffff;
    font-size: 22rpx;
}

.left {
    position: relative;
}

.type-tag {
    width: max-content;
    position: absolute;
    right: 0;
    padding: 10rpx;
    color: #ffffff;
    background: #333333;
    opacity: 0.7;
    z-index: 2;
    font-size: 14rpx;
}

.cover-image {
    width: 180rpx;
    height: 190rpx;
    border-radius: 10rpx;
}

.right {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 30rpx;
}

.row {
    display: flex;
    align-items: center;
}

.service-title {
    min-width: 100rpx;
    max-width: 340rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    font-size: 32rpx;
}

.category {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}

.icon-tag {
    margin-right: 20rpx;
    font-size: 40rpx;
    color: #fbc02d;
}

.category-text {
    margin-left: 10rpx;
}

.publisher {
    display: flex;
    align-items: center;
}


.publisher-avatar-image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
}

.publisher-nickname {
    margin-left: 10rpx;
}

.score {
    margin-left: 30rpx;
    color: #f27013;
}

.create-time {
    color: #888888;
}

.row-last {
    display: flex;
    justify-content: space-between;
}

.price {
    font-size: 32rpx;
    color: #ff0000;
}

.price-symbol {
    font-size: 22rpx;
}

.sales {
    color: #333333;
}