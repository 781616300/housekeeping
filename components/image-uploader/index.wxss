.container {
    display: flex;
    flex-wrap: wrap;
}

.uploader-item {
    width: 160rpx;
    height: 160rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    margin: 20rpx;
}

.display-image{
    width: 100%;
    height: 100%;
}

.icon-uploading, .icon-delete, .error {
    position: absolute;
    padding: 8rpx 10rpx;
    z-index: 2;
    background: #333333;
    opacity: 0.7;
}

.icon-delete {
    top: -20rpx;
    right: -20rpx;
    border-radius: 50%;
}

.error {
    font-size: 20rpx;
    color: #ffffff;
}

.choose-image {
    width: 160rpx;
    height: 160rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 20rpx;
    background: #efefef;
}