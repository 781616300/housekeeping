.container {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.top {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.row {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.score, .content {
    margin-top: 20rpx;
}

.create-time, .score {
    color: #888888;
}

.score {
    display: flex;
    align-items: center;
}

.illustration {
    display: flex;
    flex-wrap: wrap;
}

.illustration-image {
    width: 200rpx;
    height: 200rpx;
    margin-right: 30rpx;
    margin-top: 30rpx;
}