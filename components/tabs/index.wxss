.container {
    min-height: 100%;
    display: flex;
    flex-direction: column;
}

.tabs {
    display: flex;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 99;
    padding: 30rpx 0;
    /*box-sizing: border-box;*/
    background: #ffffff;
}

.tab-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.tab-label {
    color: #888888;
    white-space: nowrap;
}

.active-tab {
    color: #333333;
    font-weight: bold;
}

.divider {
    width: 50rpx;
    height: 6rpx;
    margin-top: 10rpx;
    background: #f3d066;
}

.tab-panel {
    flex: 1;
    margin-top: 30rpx;
}